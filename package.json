{
  "name": "scholardraft-simple",
  "version": "2.0.0",
  "description": "Academic Text Polisher - Professional Edition",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac"
  },
  "keywords": ["academic", "writing", "openai"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "pdfkit": "^0.15.0",
    "docx": "^8.5.0",
    "diff-match-patch": "^1.0.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.scholardraft.app",
    "productName": "ScholarDraft",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "prompts.json",
      "icon.png",
      "icon.ico",
      "icon.icns"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ScholarDraft"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.productivity",
      "icon": "icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "icon.png",
      "category": "Education"
    }
  }
}
